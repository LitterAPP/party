}
 
.header{
  display: flex;
  flex-direction: row;
  background-color: #fff;
  align-items: center;
  width: 100%;
  justify-content:  space-between;
}
.header-1{
   display: flex;
  flex-direction: row; 
  align-items: center;
  width: 600rpx;
  margin-top: 10px;
  margin-bottom: 10px;
}
.userinfo-detail{
  display: flex;
  flex-direction: column; 
}
.userinfo-detail image{
  height: 100rpx;
  width: 100rpx;
  border-radius: 50%; 
}
.userinfo-item-detail{
  display: flex;
  flex-direction: column; 
  width: 200rpx;
  margin-left: 10px;
}
.userinfo-item-detail image{
  height:50rpx;
  width:50rpx;
  border-radius: 50%;
}
.userinfo-detail text{
  color: #515151;
  font-size: 25rpx;
  align-self: center;
}
.status{
  width: 160rpx;
}
.title{
  display: flex;
  flex-direction:  column;
  align-self: center;  
  margin-left: 5px;
  text-overflow:  ellipsis; 
}
.title text{
  color: #2c2c2c;
  font-size: 35rpx;
  text-align: left;
}
.operation{
  display: flex;
  flex-direction:  column;
  margin-right: 10px;
  align-items: flex-end;
  width: 60px;
}
.operation button{
  font-size: 12px;
  margin-top: 2px;
  margin-bottom: 2px;
}
.joincontainer{
  display: flex;
  flex-direction:  column;
  background-color: #fff;
  justify-content:  space-between;
  align-items: center;
  margin-top: 20rpx;
  margin-bottom: 20rpx;
}
.joininfo{
  display: flex;
  width:100%;
  flex-direction:  row;
  justify-content:  space-between;
  background-color: #fff; 
  align-items: center;
  margin-top: 80rpx;
  margin-bottom: 20rpx;
   
}
.joininfo view{
  display: flex;
  flex-direction:  row;
  margin: 10px; 
  align-items: center;
}
.joininfo text{
  font-size: 11px;
  color: #666;
}
.join{
  display: flex;
  flex-direction:  row;
  justify-content:  space-between;
  width:100%;
}
.join button{
  margin: 10px;
  font-size: 12px;
  margin-left: 10px;
  margin-right: 10px;
}

.moreinfo{  
  display: flex;
  height: 40px;
  background-color: #fff;
  width: 100%;
  margin-top: 1px;  
  flex-direction:row;
  align-items: center;
  align-self: center;
  justify-content: flex-start;
}
.moreinfo image{
  height: 20px; 
  width: 20px;
  padding-left: 5px;
  padding-right: 5px;
} 
.moreinfo text{
  color: #aaa;
  font-size: 25rpx;
}

.item{
  display: flex;
  flex-direction: row;
  background-color: #fff;
  width:100%;
  height: 100%;
  justify-content:  flex-start;
  align-items: center;
  margin-top: 1px;
  
  border-bottom: 1px solid #e6e6e6;
}
.item-1{
  display: flex;
  flex-direction: row;
  justify-content:  flex-start;
  align-items: center;
  width: 360rpx;
}
.item text{
  font-size: 28rpx;
  color: #2c2c2c;
}
.reason{
  margin-left: 10px;
}
.moreinfo view{
  display: flex;
  flex-direction: row; 
  align-items:center;
  padding-right: 5px;
}


