.header-new{
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 100%;  
  height: 150px;
  position: relative;
}
.header-new image{
  width: 100%;
  height: 150px;
}
.header-new-1{
  display: flex;
  flex-direction: column; 
  align-items: center; 
  position: absolute;
  left: 10px;
  bottom: -30px;
}
.header-new-2{
  display: flex;
  flex-direction: column; 
  align-items:  flex-end; 
  position: absolute;
