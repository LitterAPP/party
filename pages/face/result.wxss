page{
 
}
.avatar_container{
  display: flex;
  align-items: center;
  position: relative;
  width: 100%;
  height: 150px;
}
.avatar_container image{
  position: absolute;
  width: 150px;
  height: 150px;  
  top: 0px;
  left: 50%;
  margin-left: -75px;
  border-radius: 300px;
}
text{   
  font-size: 12px;
  color: #515151;
}

.tips{
  display: flex;
  flex-direction: row;
  align-items: center;
  margin-bottom: 3px;
  margin-top: 3px;
  justify-content: center;
} 
.tips button{
  margin: 5px;
}
.desc{
  display: flex;
  flex-direction: column;
  align-items: center;
  position: relative;
}
.like-desc{ 
  position: absolute;
  top: 8px; 
  font-size: 14px;
  color: #515151;
} 

.like-value{ 
  position: absolute;
  top: 25px; 
  font-size: 20px;
  color: green;
  font-weight: bold;
} 

.like-value-tip{
  position: absolute;
  top: 25px; 
  font-size: 20px;
  color: red; 
}

.desc image{
  height: 50px;
  width: 50px;
} 
.comments{
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 5px 10px;
}

.comment_item{
  display: flex;
  flex-direction: row;
  align-items:  center;
  border-bottom: 1px solid #ccc;
  width: 100%;
}

.comment_item image{
  height: 30px;
  width: 30px;
  border: 1px solid #fff;
  border-radius: 50%;
}

.commit_comment input{
  height: 35px;
  width: 220px; 
  border-bottom: 1px dotted lightgreen;
  font-size: 14px; 
}
.commit_comment{
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  margin-top:8px; 
}
.commit_comment button{
  margin: 0px;
}