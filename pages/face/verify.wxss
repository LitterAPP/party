.avatar_container{
  display: flex;
  align-items: center;
  position: relative;
  width: 100%;
  height: 150px;
}
.avatar_container image{
  position: absolute;
  width: 150px;
  height: 150px;  
  top: 0px;
  left: 50%;
  margin-left: -75px;
  border-radius: 300px;
}
.avatar_container text{ 
  position: absolute;
  top: 100px;
  left: 50%;
  margin-left: -38px;
  font-size: 13px;
  color: #000;
}

text{   
  font-size: 12px;
  color: #515151;
}

.tips{
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 12px;
}
.tips input{
  height: 35px;
  width: 100px;
  text-align: center;
  border-bottom: 1px dotted #000;
  font-size: 14px;
}