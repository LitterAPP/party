/* suggest.wxss */
.suggest-text{
  display: flex;
  flex-direction: column;
  background: #fff; 
  width: 100%;
  align-items: center;
  align-self: center; 
}
.suggest-text textarea{
  font-size: 32rpx; 
  width: 100%; 
  margin: 10px;
}
.suggest-pic{
  display: flex;
  width:100%;
  flex-direction: column;  
  align-items: center;
  align-self: center;
  
}
.suggest-pic image{
   margin-top: 10px;
  width: 200rpx;
  height: 100rpx;
}

.suggest-sumbit{
  display: flex;
  width:100%;
  flex-direction: column;
  background: #fff; 
  margin-top: 20px;
}
.suggest-sumbit button{
  width: 100%;
  font-size: 35rpx;

}