/**app.wxss**/
.container {
  height: 100%;
  display: flex;
  flex-direction: column; 
  justify-content: space-between;
} 
.userinfo {
  display: flex;
  flex-direction:column;
  align-items: center;
  background-color: #d4237a;
  width: 100%;
  padding-top: 10px;
  padding-bottom: 10px;
} 
.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  border-radius: 50%;
}
.changeBgImage{
  display: flex;
  position: absolute;
  right: 10px;
  bottom: 10px;
}
.user-avatar-boxshow{
  border: 2px solid #fff;
  box-shadow: 1px 1px 1px #8a8a8a; 
}
.userinfo-nickname{
  display: flex;
  flex-direction:column;
  align-items: center;
  color: #fff;
}

.item-hover{
  background-color: #f2eada;
} 
page {
  display: block;
  background-color: #fffef9;
  overflow-x: hidden;
  color:#2c2c2c;
  font-family: Microsoft YaHei,'Lucida Sans', 'Lucida Sans Regular', 'Lucida Grande', 'Lucida Sans Unicode', Geneva, Verdana, sans-serif
}


.btn-warp-view{
  background-color: #2a5caa; 
}

.btn-warp-view-hover{
  background-color: #224b8f; 
} 

.btn-warp-view-0{
  background-color: #fffef9;  
}

.btn-warp-view-hover-0{
  background-color: #fffffb;
} 
